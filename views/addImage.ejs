<%- include("template/cabecera", {title: title}) %>
    <%- include("template/aside")%>
        <form class="container" id="imageForm" action="/new-image" method="POST">
            <% if (message) { %>
                <div style=" background-color: #13171F; color: <%= colorMessage %>">
                    <%= message %>
                </div>
                <% } %>

                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" maxlength="30" pattern="^[a-zA-Z0-9 _]+$" required>
                    </div>
                    <div class="form-group">
                        <label for="urlImagen">URL:</label>
                        <input type="url" id="urlImagen" name="urlImagen" required>
                    </div>
                    <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" id="date" name="date" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" maxlength="4000" rows="10" cols="50"></textarea>
                    </div>
                    <button type="submit">Enviar</button>

        </form>


        <%- include("template/footer")%>